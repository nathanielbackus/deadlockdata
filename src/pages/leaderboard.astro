---
import BaseLayout from "../layouts/BaseLayout.astro";
import LeaderboardTable from "../components/LeaderboardTable.astro";

const pageTitle = "Top 100 Players";

fetch("http://api.steampowered.com/ISteamUser/GetPlayerSummaries/v0002/?key=0D2FD14C4AFCE0C56C3E8CA3FA7B462F&steamids=76561199065817890&format=json")
  .then((res) => res.json())
  .then((data) => {
    const playerName = data.response.players[0]; 
    console.log("Player Name:", playerName.personaname);
    console.log("Player Avatar:", playerName.avatar);
  })
  .catch((err) => console.error(err));


---
<BaseLayout pageTitle={pageTitle}>
<LeaderboardTable />
</BaseLayout>